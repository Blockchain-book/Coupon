<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户"
                android:layout_gravity="left"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/circulate_user2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX"
                android:layout_gravity="left"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="于"
                android:layout_gravity="left"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/circulate_time2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX"
                android:layout_gravity="left"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用电子优惠券"
                android:layout_gravity="left"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/circulate_amount2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX元"
                android:layout_gravity="left"
                android:textSize="15sp"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="请确认。"/>
        <Button
            android:id="@+id/confirm_pay"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            android:text="确认"/>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/circulate_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:background="@color/mainTitleText" />
            <TextView
                android:id="@+id/tab_circulate_middle"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/tab_my_bg"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:textColor="@drawable/tab_my_text"
                android:text="优惠券确认请求列表"/>
        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/mainTitleText" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="用户名"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="时间"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="金额"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/mainTitleText" />
    <ListView
        android:id="@+id/coupon_verify_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>
