<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main">

    <RelativeLayout
        android:id="@+id/tab_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@color/light_yellow"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/tab_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tab_first_page"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/tab_menu_image"
                android:gravity="center"
                android:textColor="@drawable/tab_menu_text"
                android:background="@drawable/tab_menu_bg"
                android:text="首页"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/mainTitleText" />

            <TextView
                android:id="@+id/tab_circulate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_circulate_bg"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/tab_circulate_image"
                android:gravity="center"
                android:textColor="@drawable/tab_circulate_text"
                android:text="流通"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/mainTitleText" />

            <TextView
                android:id="@+id/tab_my"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tab_my_bg"
                android:drawablePadding="3dp"
                android:drawableTop="@drawable/tab_my_image"
                android:gravity="center"
                android:textColor="@drawable/tab_my_text"
                android:text="我的"/>
        </LinearLayout>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/tab_bottom"
        android:background="@color/white">
    </FrameLayout>


</RelativeLayout>